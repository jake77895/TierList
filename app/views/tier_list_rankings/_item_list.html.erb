<div class="container mt-4">
  <% if tier_list_items.present? %>
    <div class="row">
      <% tier_list_items.each_with_index do |item, index| %>
        <div class="col-md-3 mb-4">
          <div class="card" style="width: 100%;">
            <!-- Item Image -->
            <% if item[:image_url].present? %>
              <%= image_tag item[:image_url], class: "card-img-top", alt: item[:name], style: "object-fit: cover; width: 100%; height: 300px;" %>
            <% else %>
              <img src="<%= asset_path('egg.png') %>" class="card-img-top" alt="Placeholder Image" style="object-fit: cover; width: 100%; height: 200px;">
            <% end %>
            <!-- Item Details -->
            <div class="card-body">
              <h5 class="card-title"><%= item[:name] %></h5>
              <p class="card-text"><%= item[:description].presence || "No description provided." %></p>
            </div>
          </div>
        </div>
        <!-- Start a new row after every 4 cards -->
        <% if (index + 1) % 4 == 0 %>
          </div><div class="row">
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">No items available for this tier.</p>
  <% end %>
</div>
