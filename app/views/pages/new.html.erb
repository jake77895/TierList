<h1>Create New Page</h1>

<%= form_with model: @page, local: true, html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :short_description, 'Short Description', class: 'form-label' %>
    <%= f.text_area :short_description, rows: 3, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :profile_photo, 'Profile Photo', class: 'form-label' %>
    <%= f.file_field :profile_photo, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :cover_photo, 'Cover Photo', class: 'form-label' %>
    <%= f.file_field :cover_photo, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :about, 'About', class: 'form-label' %>
    <%= f.text_area :about, rows: 5, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :parent_id, 'Parent Page', class: 'form-label' %>
    <%= f.collection_select :parent_id, Page.all, :id, :name, { include_blank: true }, { class: 'form-select' } %>
  </div>

  <%= f.submit 'Create Page', class: 'btn btn-success' %>
  <%= link_to 'Back to Pages', pages_path, class: 'btn btn-secondary ms-2' %>
<% end %>
