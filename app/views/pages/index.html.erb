<h1>Pages</h1>

<%= link_to 'Create New Page', new_page_path, class: 'btn btn-primary' %>

<ul>
  <% @pages.each do |page| %>
    <li>
      <%= link_to page.name, page_path(page) %>
      <%= link_to 'Edit', edit_page_path(page) %>
      <%= link_to 'Delete', page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
