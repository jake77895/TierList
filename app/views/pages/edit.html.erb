<h1>Edit Page</h1>

<%= form_with model: @page, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div>
    <%= f.label :parent_id, 'Parent Page' %>
    <%= f.collection_select :parent_id, Page.all, :id, :name, include_blank: true, selected: @page.parent_id %>
  </div>

  <%= f.submit 'Update Page', class: 'btn btn-success' %>
<% end %>
<%= link_to 'Back to Pages', pages_path, class: 'btn btn-secondary' %>
