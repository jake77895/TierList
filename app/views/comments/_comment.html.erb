<div class="comment border rounded p-3 mb-3 bg-white">
  <div class="d-flex justify-content-between align-items-center mb-2">
    <div class="d-flex gap-2 align-items-center">
      <span><%= comment.user.user_name %></span>
      
     
      
      <% if comment.item %>
        <span class="badge text-bg-primary" 
              role="button" 
              data-bs-toggle="modal" 
              data-bs-target="#modal-<%= comment.item.id %>">
          <%= truncate(comment.item.name, length: 10) %>
        </span>
      <%# else %>
<!--        <span class="badge text-bg-secondary">General</span>-->
      <% end %>

       <% if current_user == comment.user %>
        <div class="d-inline-flex gap-2 ms-2">
        <div class="vr me-2"></div> 
          <%= link_to tier_list_comment_path(comment.tier_list, comment), 
                      method: :delete, 
                      data: { confirm: "Are you sure you want to delete this comment?" }, 
                      class: "text-danger", 
                      title: "Delete Comment" do %>
            <%= image_tag "trash-icon.svg", class: "icon", alt: "Delete" %>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <small class="text-muted">
      <%= comment.updated_at.strftime("%-m/%-d/%y") %>
    </small>
  </div>
  
  <p class="mt-3 mb-0 text-wrap text-break">
    <%= comment.body %>
  </p>
</div>
