<div class="comment border rounded p-3 mb-3 bg-light">
  <!-- Comment Header -->
  <div class="d-flex justify-content-between align-items-center mb-2">
    <div>
      <strong><%= comment.user.user_name %></strong> <!-- User name -->
    </div>
    <small class="text-muted">
      <%= comment.updated_at.strftime("%B %d, %Y") %> <!-- Updated date -->
    </small>
  </div>

  <!-- Item Badge -->
  <% if comment.item %>
    <span class="badge text-bg-primary">
      <%= comment.item.name %> <!-- Name of the related item -->
    </span>
  <% else %>
    <span class="badge text-bg-primary">
      Placeholder Item <!-- Placeholder text for the badge -->
    </span>
  <% end %>

  <!-- Comment Body -->
  <p class="mt-3 mb-0">
    <%= comment.body %> <!-- The actual comment text -->
  </p>
</div>
