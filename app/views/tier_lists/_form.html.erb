
<%= form_with(model: @tier_list, local: true, html: { class: "needs-validation" }) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <%= f.hidden_field :created_by_id, value: current_user.id %>

  <div class="mb-3">
    <%= f.label :short_description, class: "form-label" %>
    <%= f.text_area :short_description, class: "form-control", rows: 3 %>
  </div>



  <!-- Custom Fields -->
<%= f.fields_for :custom_fields, @tier_list.custom_fields do |cf| %>
  <div class="custom-field-row">
    <%= cf.text_field :name, placeholder: "Field Name", value: cf.object[:name], class: "form-control mb-2" %>
    <%= cf.select :data_type, ["String", "Integer", "Boolean", "Date"], { selected: cf.object[:data_type] }, class: "form-control mb-2" %>
  </div>
<% end %>






  <div class="form-check mb-3">
    <%= f.check_box :published, class: "form-check-input", id: "published" %>
    <%= f.label :published, "Published?", class: "form-check-label", for: "published" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit "Save Tier List", class: "btn btn-primary" %>
  </div>
<% end %>




