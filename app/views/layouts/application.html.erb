<!DOCTYPE html>
<html>
  <head>
    <title>Rails Template</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>



    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <style>
      /* Ensure the body and html take full height */
      html, body {
        height: 100%; /* Ensure the body takes up the full height of the viewport */
        margin: 0;
      }

    </style>

  </head>

  <body class="d-flex flex-column min-vh-100">

    <!-- NAVIGATION BAR -->

    <nav class="navbar navbar-light bg-light ">
      <div class="container">

        <a class="navbar-brand" href="<%= root_path %>">
          <%= image_tag 'logo.png', width: 30, height: 30, alt: 'Logo', class: 'logo'%>
        </a>

        <% if current_user.present? %>
          <div class="d-inline-flex">
            <a href="/users/edit" class="btn btn-outline-primary me-1">Edit profile</a>
            <a href="/users/sign_out" class="btn btn-primary">Sign out</a>
          </div>
        <% else %>
          <div class="d-inline-flex">
            <a href="/users/sign_in" class="btn btn-outline-primary">Sign in</a>
            <a href="/users/sign_up" class="btn btn-primary ms-2">Sign up</a>
          </div>

        <% end %>

        <% if user_signed_in? && current_user.admin? %>
          <nav>
            <%= link_to "Admin - Manage People", admin_banks_people_path, class: "btn btn-outline-danger" %>
          </nav>
        <% end %>




      </div>
    </nav>

    <% if notice.present? %>
      <div class="alert alert-primary notice" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="container flex-grow-1">
      <%= yield %>
    </main>

    <!-- Footer -->
<!--    <footer class="bg-light text-center py-3 mt-auto">
      <div>Â© 2024 | All rights reserved.</div>
    </footer>-->

  </body>
</html>
