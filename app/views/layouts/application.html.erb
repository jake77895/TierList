<!DOCTYPE html>
<html>
  <head>
    <title>Rails Template</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <style>
      /* Ensure the body and html take full height */
      html, body {
        height: 100%;
      }

      /* Flexbox container ensures footer sticks at the bottom */
      body {
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1; /* Fills the remaining vertical space */
      }

      footer {
        background-color: #f8f9fa; /* Light gray footer background */
        padding: 1rem;
      }
    </style>

  </head>

  <body>

    <!-- NAVIGATION BAR -->

    <nav class="navbar navbar-light bg-light ">
      <div class="container">

        <a class="navbar-brand" href="<%= root_path %>">
          <%= image_tag 'logo.png', width: 30, height: 30, alt: 'Logo', class: 'logo'%>
        </a>

        <% if current_user.present? %>
          <div class="d-inline-flex">
            <a href="/users/edit" class="btn btn-outline-primary me-1">Edit profile</a>
            <a href="/users/sign_out" class="btn btn-primary">Sign out</a>
          </div>
        <% else %>
          <div class="d-inline-flex">
            <a href="/users/sign_in" class="btn btn-outline-primary">Sign in</a>
            <a href="/users/sign_up" class="btn btn-primary ms-2">Sign up</a>
          </div>

        <% end %>


      </div>
    </nav>

    <% if notice.present? %>
      <div class="alert alert-primary notice" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="container">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="text-center">
      <div>Â© 2024 | All rights reserved.</div>
    </footer>

  </body>
</html>
