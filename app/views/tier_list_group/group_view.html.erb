<div class="container mt-4">
  <div class="row">
    <!-- Left Column: 2/3 Width -->
    <div class="col-lg-8 col-md-8">
      <div class="content-left border p-3">
        <!-- Placeholder for Tier List Content -->
        <%= render 'tier_list_group/tier_list_group' %>
      </div>
    </div>

    <!-- Right Column: 1/3 Width -->
    <div class="col-lg-4 col-md-4">
      <div class="content-right border p-3" style="background-color: #f8f9fa;">
        <!-- Placeholder for Future Content -->
        <h3 class="text-left">Comments</h3>
        <hr class="mt-0">

        <!-- Render Comments Section -->
        <%= render 'comments/comments_section', tier_list: @tier_list, cancel_path: group_list_tier_list_path(@tier_list) %>
      </div>
      <div class="d-grid gap-2 mt-2 d-flex justify-content-left">
        <button type="button" class="btn btn-outline-primary"
          data-bs-toggle="modal" data-bs-target="#fullscreenModal">
          See All Items
        </button>
      </div>
    </div>

  </div>
</div>
